@model IEnumerable<HotelReservationManager.Models.Room>

@{
    ViewData["Title"] = "Rooms";
}

<style>
    body, html {
        margin: 0;
        padding: 0;
        font-family: 'Lora', serif;
        width: 100%;
        height: 100%;
        overflow-x: hidden;
    }

    .navbar {
        position: fixed;
        width: 100%;
        top: 0;
        left: 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 50px;
        background: rgba(34, 49, 63, 0.9);
        color: white;
        z-index: 1000;
    }

        .navbar a {
            color: white;
            text-decoration: none;
            margin: 0 12px;
            font-weight: 600;
            transition: 0.3s;
        }

            .navbar a:hover {
                color: #f39c12;
            }

    .page-title {
        text-align: center;
        font-size: 2.5rem;
        margin-top: 120px;
        font-weight: bold;
        color: #222;
    }

    .room-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        padding: 20px 10%;
        gap: 20px;
    }

    .room-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0px 5px 10px rgba(0,0,0,0.15);
        width: 300px;
        text-align: center;
        overflow: hidden;
        transition: transform 0.3s ease;
    }

        .room-card:hover {
            transform: scale(1.05);
        }

        .room-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .room-card h3 {
            margin: 10px 0;
            font-size: 1.5rem;
            color: #333;
        }

        .room-card p {
            padding: 0 15px;
            color: #555;
        }

    .btn-details {
        display: inline-block;
        margin: 15px;
        padding: 10px 20px;
        background: #f39c12;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: 0.3s;
        font-weight: bold;
    }

        .btn-details:hover {
            background: #e67e22;
        }
</style>

<h1 class="page-title">Our Rooms</h1>

<div class="room-container">
    @foreach (var room in Model)
    {
        <div class="room-card">
            <img src="@room.ImageUrl" alt="@room.RoomType Image">
            <div class="room-info">
                <h3>@room.RoomType</h3>
                <p>Capacity: @room.Capacity people</p>
                <p>Price (Adult): $@room.PriceForAdult</p>
                <p>Price (Child): $@room.PriceForChild</p>
                <a href="@Url.Action("Details", "Rooms", new { id = room.Id })" class="btn-details">Details</a>
            </div>
        </div>
    }
</div>

