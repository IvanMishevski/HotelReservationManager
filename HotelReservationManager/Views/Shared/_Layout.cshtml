<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotelReservationManager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HotelReservationManager.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="navbar">
        <div class="logo"><h2>HotelReservationManager</h2></div>
        <div class="nav-links">
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Rooms" asp-action="Index">Rooms</a>
            <a asp-controller="Reservations" asp-action="Index">Reservations</a>
            <a asp-controller="Users" asp-action="Index">Users</a>
            <a asp-controller="Customers" asp-action="Index">Customers</a>
            <a asp-controller="About" asp-action="Index">About</a>
            <a asp-controller="Contact" asp-action="Contact">Contact</a>
            <a asp-controller="Admin" asp-action="Index">Admin</a>
            <a asp-controller="Account" asp-action="Register">Sign Up</a>
            <a asp-controller="Account" asp-action="Login">Log In</a>
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - HotelReservationManager - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
