@model IEnumerable<HotelReservationManager.Models.Room>

@{
    ViewData["Title"] = "Home Page";
}

<style>
    body, html {
        margin: 0;
        padding: 0;
        font-family: 'Lora', serif;
        width: 100%;
        height: 100%;
        overflow-x: hidden;
    }

    .navbar {
        position: fixed;
        width: 100%;
        top: 0;
        left: 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 50px;
        background: rgba(34, 49, 63, 0.9);
        color: white;
        z-index: 1000;
    }

        .navbar a {
            color: white;
            text-decoration: none;
            margin: 0 12px;
            font-weight: 600;
            transition: 0.3s;
        }

            .navbar a:hover {
                color: #f39c12;
            }

    /* Hero Section */
    .hero {
        position: relative;
        width: 100%;
        height: 100vh;
        background: url('https://img.freepik.com/premium-photo/ai-generated-ai-generative-luxury-hotel-resort-vacation-trip-travel-adventure-qatar-villa-with-sea_95211-23949.jpg') no-repeat center center/cover;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-align: center;
        margin-top: 80px; 
    }

        .hero h1 {
            font-size: 4rem;
            font-weight: bold;
            text-shadow: 3px 3px 10px rgba(0,0,0,0.8);
            margin-bottom: 50%;
            
        }

    /* Services Section */
    .services {
        text-align: center;
        padding: 60px 10%;
        background: #ecf0f1;
        width: 100%;
    }

    .service-card {
        display: inline-block;
        width: 22%;
        margin: 15px;
        padding: 25px;
        background: white;
        border-radius: 12px;
        box-shadow: 0px 5px 10px rgba(0,0,0,0.15);
        transition: transform 0.3s ease;
    }

        .service-card:hover {
            transform: scale(1.05);
        }

        .service-card img {
            width: 80px; 
            height: auto; 
            margin-bottom: 20px;
        }

    /* Contact Section */
    .contact-section {
        background: #d5dbdb;
        padding: 50px;
        text-align: center;
        width: 100%;
    }

        .contact-section .info {
            display: inline-block;
            width: 30%;
            margin: 20px;
        }

    footer {
        text-align: center;
        background: #2c3e50;
        color: white;
        padding: 15px;
        font-size: 1rem;
    }

    /* Media Queries */
    @@media (max-width: 768px) {
        .service-card

    {
        width: 45%;
    }

    .contact-section .info {
        width: 80%;
        display: block;
        margin: auto;
        margin-bottom: 20px;
    }

    }

    @@media (max-width: 480px) {
        .service-card

    {
        width: 100%;
    }

    .hero h1 {
        font-size: 2.5rem;
    }

    }

    .hero h1 {
        font-size: 2.5rem;
    }
</style>


<!-- Hero Section -->
<div class="hero">
