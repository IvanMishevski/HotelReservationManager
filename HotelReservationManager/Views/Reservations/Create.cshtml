@model HotelReservationManager.Models.Reservation

@{
    ViewData["Title"] = "Create Reservation";
}

<style>
    body, html {
        margin: 0;
        padding: 0;
        font-family: 'Lora', serif;
        background-color: #f9f9f9;
    }

    body, html {
        margin: 0;
        padding: 0;
        font-family: 'Lora', serif;
        width: 100%;
        height: 100%;
        overflow-x: hidden;
    }

    .navbar {
        position: fixed;
        width: 100%;
        top: 0;
        left: 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 50px;
        background: rgba(34, 49, 63, 0.9);
        color: white;
        z-index: 1000;
    }

        .navbar a {
            color: white;
            text-decoration: none;
            margin: 0 12px;
            font-weight: 600;
            transition: 0.3s;
        }

            .navbar a:hover {
                color: #f39c12;
            }
    .container {
        max-width: 600px;
        margin: 150px auto 50px auto;
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0px 10px 20px rgba(0,0,0,0.1);
    }

    h2 {
        text-align: center;
        color: #222;
        margin-bottom: 30px;
    }

    label {
        font-weight: 600;
        display: block;
        margin-bottom: 5px;
        margin-top: 15px;
    }

    input[type="date"],
    input[type="number"] {
        width: 100%;
        padding: 10px;
        border-radius: 6px;
        border: 1px solid #ccc;
        font-size: 1rem;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn-submit {
        display: block;
        width: 100%;
        padding: 12px;
        background-color: #f39c12;
        border: none;
        color: white;
        font-weight: bold;
        font-size: 1rem;
        border-radius: 6px;
        transition: 0.3s;
        margin-top: 15px;
    }

        .btn-submit:hover {
            background-color: #e67e22;
            cursor: pointer;
        }

    .text-danger {
        color: red;
        font-size: 0.9rem;
    }
</style>

<div class="container">
    <h2>Book Your Room</h2>

    <form asp-controller="Reservations" asp-action="Create" method="post">

        <input type="hidden" asp-for="RoomId" value="@ViewBag.RoomId" />

        <div class="form-group">
            <label asp-for="CheckInDate">Check-In Date</label>
            <input asp-for="CheckInDate" type="date" />
            <span asp-validation-for="CheckInDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CheckOutDate">Check-Out Date</label>
            <input asp-for="CheckOutDate" type="date" />
            <span asp-validation-for="CheckOutDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">
                <input asp-for="IsBreakfastIncluded" type="checkbox" class="form-check-input" /> IsBreakfastIncluded
            </label>
            <span asp-validation-for="IsBreakfastIncluded" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">
                <input asp-for="IsAllInclusive" type="checkbox" class="form-check-input" /> IsAllInclusive
            </label>
            <span asp-validation-for="IsAllInclusive" class="text-danger"></span>
        </div>
        <button  type="submit" class="btn-submit">Confirm Booking</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
